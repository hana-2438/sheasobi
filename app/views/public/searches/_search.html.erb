<%= form_with url: search_path, method: :get, local: true, class: "d-flex" do |f| %>
  <%= f.text_field :word, class: "form-control search-control", placeholder: "キーワードから探す" %>
  <%= f.select :range, options_for_select([['ユーザー'],['投稿']]) , class: "form-control search-control" %>
  <%= button_tag type: "submit", class: "btn btn-outline-secondary search-btn text-white" do %>
   <i class="fas fa-search"></i>
  <% end %>
<% end %>