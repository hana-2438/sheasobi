<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="mt-4 mb-4 text-center"><%= @member.name %>さんを通報する</h4>
      <% if @report.errors.any? %>
        <%= @report.errors.count %>件のエラーが発生しました
          <ul>
            <% @report.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= form_with model: @report, url: member_reports_path(@member), method: :post, local: true do |f| %>

        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :reason, '通報理由（必須）' %>
            </div>
            <div class="col-md-8">
              <%= f.text_area :reason, rows:'4', placeholder: '通報理由', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group">
           <div class="row">
             <div class="col-md-4">
                 <%= f.label :url, '悪質な投稿等が分かるページのURL' %>
             </div>
             <div class="col-md-8">
                 <%= f.text_field :url, class: 'form-control' %>
             </div>
           </div>
        </div>

        <div class="text-center mt-5">
          <%= f.submit "通報する", class:"btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


