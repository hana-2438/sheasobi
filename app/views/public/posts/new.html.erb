<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="mt-4 mb-4 text-center">お出かけスポットを投稿する</h4>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7 mx-auto">
      <%= form_with model: @post, url: posts_path, method: :post, local: true do |f| %>

        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :title, 'タイトル' %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :title, placeholder: 'タイトル', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group">
           <div class="row">
             <div class="col-md-4">
                 <%= f.label :image, '画像' %>
             </div>
             <div class="col-md-8">
                 <%= f.file_field :image, accept: "image/*" %>
             </div>
           </div>
        </div>

        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :region_id, '都道府県名' %>
            </div>
            <div class="col-md-8">
               <%= f.collection_select :region_id, Region.all, :id, :name,{prompt: "選択してください"}, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :place, '場所の名前' %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :place, placeholder: '場所の名前', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :tag_id, 'タグ' %>
            </div>
            <div class="col-md-8">
               <%= f.collection_select :tag_id, Tag.all, :id, :name,{prompt: "選択してください"}, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group">
         <div class="row">
           <div class="col-md-4">
               <%= f.label :caption, '説明文' %>
           </div>
           <div class="col-md-8">
               <%= f.text_area :caption, rows: "5", class: "form-control" %>
           </div>
         </div>
        </div>

        <div class="text-center mt-5">
          <%= f.submit "投稿する", class:"btn btn-salmon btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


