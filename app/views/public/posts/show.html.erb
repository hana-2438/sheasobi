<div class="container">
  <div class="row">

    <div class="col-md-6">
      <div class="card">
        <h5 class="card-header"><%= @post.created_at.strftime('%Y/%m/%d')%> | 投稿者：<%= @post.member.name%></h5>
        <%= image_tag @post.get_image(150,150), class: "bd-placeholder-img card-img-top" %>
        <div class="card-body">
          <h5 class="card-title font-weight-bold "><%= @post.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">場所：　<%= @post.region.name%>　<%= @post.place%></h6>
          <p class="card-text"><%= @post.caption %></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
        <div class="card-footer">
          <small class="text-muted">Last updated 3 mins ago</small>
        </div>
      </div>
    </div>

    <div class="col-md-6">

    </div>

  </div>
</div>
