     
       <div class="form-group">
         <div class="row">
           <div class="col-md-3">
               <%= f.label :name, 'ニックネーム' %>
           </div>
           <div class="col-md-9">
               <%= f.text_field :name, class: 'form-control' %>
           </div>
         </div>
       </div>

       <div class="form-group">
         <div class="row">
           <div class="col-md-3">
               <%= f.label :email, 'メールアドレス' %>
           </div>
           <div class="col-md-9">
               <%= f.email_field :email, class: 'form-control' %>
           </div>
         </div>
       </div>

        <div class="form-group">
         <div class="row">
           <div class="col-md-3">
               <%= f.label :profile_image, 'プロフィール画像' %>
           </div>
           <div class="col-md-9">
               <%= f.file_field :profile_image, accept: "image/*" %>
           </div>
         </div>
       </div>

       <div class="form-group">
         <div class="row">
           <div class="col-md-3">
               <%= f.label :introduction, 'プロフィール文' %>
           </div>
           <div class="col-md-9">
               <%= f.text_area :introduction, rows: "5", autofocus: true, class: "form-control" %>
           </div>
         </div>
       </div>

        