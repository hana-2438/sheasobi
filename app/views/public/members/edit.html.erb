<div class="container">
  <div class="row">
    <div class="col-lg-12 edit_title">
      <h4 class="bg-white mt-4 text-center">会員情報編集</h4>
      <%= render "public/shared/error_messages", resource: @member %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
       <%= form_with model: @member, url: member_path, method: :patch do |f| %>
         <div class="form_group row mt-4  justify-content-center align-items-center">
            <label class="col-sm-3 col-form-label">ニックネーム</label>
            <div>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form_controll" %>
            </div>
         </div>
         <div class="form_group row mt-4 justify-content-center align-items-center">
            <label class="col-sm-3 col-form-label">メールアドレス</label>
            <div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_controll" %>
            </div>
         </div>
         <div class="form_group row mt-4 justify-content-center align-items-center profile_image">
            <label class="col-sm-3 col-form-label">プロフィール画像</label>
            <div>
              <%= f.file_field :profile_image, autofocus: true, accept: "image/*", class: "form_controll" %>
            </div>
         </div>
         <div class="form_group row mt-4  justify-content-center align-items-center">
            <label class="col-sm-3 col-form-label">プロフィール文</label>
            <div>
              <%= f.text_area :introduction, rows: "5", autofocus: true, class: "form_controll" %>
            </div>
         </div>
         <div class="text-center mt-5">
          <%= f.submit "保存する", class:"btn btn-salmon btn-lg" %>
       　 </div>
       <% end %>
       <div class="row mt-5 justify-content-center">
          <h5 class="bg-white pl-3 pr-3">退会したい方は<%= link_to "こちら", members_confirm_path %>へ</h5>
       </div>
    </div>
  </div>
</div>