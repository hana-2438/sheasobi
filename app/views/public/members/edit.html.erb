<div class="container">
  <div class="row">
    <div class="col-lg-12 edit_title">
      <h4 class="mt-4 mb-4 text-center">会員情報編集</h4>
      <div>
        <% if @member.errors.any? %>
        <%= @member.errors.count %>件のエラーが発生しました
          <ul>
            <% @member.errors.full_messages.each do |member| %>
              <li><%= member %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= form_with model: @member, url: member_path, method: :patch do |f| %>
        <%= render "edit", member: @member, f: f %>
          <div class="text-center mt-5">
            <%= f.submit "保存する", class:"btn btn-salmon btn-lg" %>
          </div>
      <% end %>
        <div class="row mt-5 justify-content-center">
          <h5 class="pl-3 pr-3">退会したい方は<%= link_to "こちら", members_confirm_path %>へ</h5>
        </div>
    </div>
  </div>
</div>