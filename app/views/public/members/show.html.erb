<div class="container">
  <div class="row">
    <div class="col-lg-4 h2 mt-4">
      <%= @member.name %>さんのProfile
    </div>
    <div class="col-lg-4 text-center profile-content">
        <%= image_tag @member.get_profile_image(200, 200), class: "rounded-circle img-thumbnail border-secondary mt-4" %>
      <p class="h2 d-flex font-weight-bold justify-content-center align-items-center"><%= @member.name %></p>
      <p class="d-flex justify-content-center align-items-center"><%= @member.introduction %></p>

      <% unless member_signed_in? %>
        <%= link_to "ユーザーをフォローするには会員登録またはログインが必要です",new_member_registration_path, class: "btn btn-secondary rounded-pill" %>
      <% else %>
        <% if current_member.id == params[:id].to_i %>
           <%= link_to "編集する", edit_member_path(@member), class: "btn btn-secondary rounded-pill btn-lg" %>
        <% else %>
          <!--ふぉろーに関する記述はフォロー機能実装時に詳しく記述-->
          <% if current_member.following?(Member.find(params[:id])) %>
            <%= link_to "フォロー中",  member_relationships_path(params[:id]), method: :delete, class: "btn btn-salmon rounded-pill" %>
          <% else %>
            <%= link_to "フォローする", member_relationships_path(params[:id]), method: :post, class: "btn btn-green rounded-pill" %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div class="col-lg-4 mt-4 profile-side">
      <div class="col-lg-12 h4 mb-4">
        フォロー：
        <%= link_to member_followings_path(@member) do %>
          <%= @member.followings.count %>
        <% end %>
      </div>
      <div class="col-lg-12 h4 mb-4">
        フォロワー：
         <%= link_to member_followers_path(@member) do %>
           <%= @member.followers.count %>
         <% end %>
      </div>
      <div class="col-lg-12 mt-5">
        <% if member_signed_in? && current_member.id == params[:id].to_i %>
          <%= link_to favorites_member_path(@member), class: "btn btn-salmon btn-lg rounded-pill" do %>
            いいね<i class="fas fa-heart heart_red"></i>した投稿を見る
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <!--ユーザーの投稿一覧-->
  <div class="row">
    <div class="col-md-12">
        <div class="row row-cols-1 row-cols-md-3">
        <%= render "public/posts/index", posts: @posts %>
        </div>
    </div>
     <div>
       <%= paginate @posts %>
     </div>
  </div>
</div>
