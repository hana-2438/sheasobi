<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="mt-4 mb-4 text-center">新規会員登録</h4>
      <div>
        <%= flash[:alert] %>
        <%= render "public/shared/error_messages", resource: resource %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :name, 'ニックネーム' %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :name, placeholder: 'えひめ太郎', class: 'form-control' %>
            </div>
          </div>
        </div>

         <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :email, 'メールアドレス' %>
            </div>
            <div class="col-md-8">
               <%= f.email_field :email, placeholder: 'sample@example', class: 'form-control' %>
            </div>
          </div>
        </div>

         <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :password, 'パスワード(6文字以上)' %>
            </div>
            <div class="col-md-8">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :password_confirmation, 'パスワード(確認用)' %>
            </div>
            <div class="col-md-8">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="text-center mt-5">
          <%= f.submit "新規登録", class:"btn btn-salmon btn-lg" %>
        </div>
      <% end %>
       <div class="row mt-5 justify-content-center">
          <h5 class="pl-3 pr-3">既に登録済みの方は<%= link_to "こちら", new_member_session_path %>まで</h5>
       </div>
    </div>
  </div>
</div>


