<div class="container">
  <div class="row">
    <div class="col-lg-12 login_title">
      <h4 class="bg-white mt-4">新規会員登録</h4>
      <%= flash[:notice] %>
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form_group row mt-4 justify-content-center align-items-center">
          <label class="col-sm-3 col-form-label">ニックネーム</label>
          <div>
            <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: 'えひめ太郎', class: "form_controll" %>
          </div>
        </div>

        <div class="form_group row mt-4 justify-content-center align-items-center">
          <label class="col-sm-3 col-form-label">メールアドレス</label>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example', class: "form_controll" %>
          </div>
        </div>

        <div class="form_group row mt-4 justify-content-center align-items-center">
          <label class="col-sm-3 col-form-label">パスワード(6文字以上)</label>
          <div>
            <%= f.password_field :password, autocomplete: "new-password", class: "form_controll" %>
          </div>
        </div>

        <div class="form_group row mt-4 justify-content-center align-items-center">
          <label class="col-sm-3 col-form-label">パスワード(確認用)</label>
          <div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_controll" %>
          </div>
        </div>

        <div class="text-center mt-5">
          <%= f.submit "新規登録", class:"btn btn-primary btn-lg" %>
        </div>
      <% end %>
       <div class="row mt-5 justify-content-center">
          <h5 class="bg-white pl-3 pr-3">既に登録済みの方は<%= link_to "こちら", new_member_session_path %>まで</h5>
       </div>
    </div>
  </div>
</div>


