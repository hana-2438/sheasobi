<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="mt-4 mb-4 text-center">ログイン</h4>
      <p class="text-center">会員の方はこちらからログインしてください。</p>
      <div class="text-center mt-3 text-danger">
        <%= flash[:alert] %>
        <%= render "public/shared/error_messages", resource: resource %>
      </div>
    </div>
  </div>

  <div class="row">
   <div class="col-md-7 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form_group mb-3">
           <div class="row">
              <div class="col-md-4">
                 <%= f.label :email, 'メールアドレス' %>
              </div>
              <div class="col-md-8">
                <%= f.email_field :email, placeholder: 'sample@example', class: 'form-control' %>
              </div>
           </div>
        </div>

        <div class="form_group mb-3">
           <div class="row">
             <div class="col-md-4">
               <%= f.label :password, 'パスワード(6文字以上)' %>
             </div>
             <div class="col-md-8">
                 <%= f.password_field :password, class: 'form-control' %>
             </div>
           </div>
        </div>

        <div class="form_group row mt-4 justify-content-center align-items-center">
            <%= f.check_box :remember_me %>
            <div>
              <%= f.label :remember_me %>
            </div>
        </div>

        <div class="row mt-5">
          <div class="col-sm-8 mx-auto">
            <div class="text-center">
              <%= f.submit "ログイン", class:"btn btn-salmon" %>
            </div>
          </div>
        </div>

      <% end %>

       <div class="row mt-5 justify-content-center">
          <h5 class="pl-3 pr-3">会員登録がお済みでない方は<%= link_to "こちら", new_member_registration_path %>まで</h5>
       </div>
    </div>
  </div>
</div>


