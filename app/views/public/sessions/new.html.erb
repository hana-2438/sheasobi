<div class="container">
  <div class="row">
    <div class="col-lg-12 login_title">
      <h4 class="bg-white mt-4">ログイン</h4>
      <p>会員の方はこちらからログインしてください。</p>
      <%= flash[:notice] %>
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form_group row mt-4 justify-content-center align-items-center">
          <label class="col-sm-3 col-form-label">メールアドレス</label>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example', class: "form_controll" %>
          </div>
        </div>

        <div class="form_group row mt-4 justify-content-center align-items-center">
          <label class="col-sm-3 col-form-label">パスワード(6文字以上)</label>
          <div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form_controll" %>
          </div>
        </div>

        <div class="form_group row mt-4 justify-content-center align-items-center">
            <%= f.check_box :remember_me %>
            <div>
              <%= f.label :remember_me %>
            </div>
        </div>

        <div class="row mt-5">
          <div class="col-sm-8 mx-auto">
            <div class="text-center">
              <%= f.submit "ログイン", class:"btn btn-salmon" %>
            </div>
          </div>
        </div>

      <% end %>

       <div class="row mt-5 justify-content-center">
          <h5 class="bg-white pl-3 pr-3">会員登録がお済みでない方は<%= link_to "こちら", new_member_registration_path %>まで</h5>
       </div>
    </div>
  </div>
</div>


