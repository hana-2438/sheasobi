<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div>
        <h4 class="mt-4 mb-4 text-center">お問い合わせ</h4>
      </div>
      <% if @inquiry.errors.any? %>
      <%= @inquiry.errors.count %>件のエラーが発生しました
        <ul>
          <% @inquiry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7 mx-auto">
      <%= form_with model: @inquiry, url: inquiries_confirm_path, method: :get, local: true do |f| %>
        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :name, '名前' %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :name, placeholder: '名前', class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="form_group mb-3">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :email, 'メールアドレス' %><br>
              <p class="small">(こちらにご登録いただいたメールアドレスにご返答いたします。)</p>
            </div>
            <div class="col-md-8">
              <%= f.email_field :email, placeholder: 'sample@example', class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :message, 'お問い合わせ内容' %>
            </div>
            <div class="col-md-8">
              <%= f.text_area :message, rows: "7", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="text-center mt-5">
          <%= f.submit "確認", class:"btn btn-salmon btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
