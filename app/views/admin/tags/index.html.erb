<p class="text-success">
  <%= flash[:alert] %>
  <%= flash[:notice] %>
</p>
<div class="container mx-auto">
  <div class="row mt-3">

    <div class="col-md-6 mt-4 mb-4 mx-auto">
      <div class="card shadow">
        <div class="card-body">
          <p class="card-title font-weight-bold">タグ新規作成</p>
           <%= form_with model: @tag, url: admin_tags_path, method: :post, local: true do |f| %>
            <div class="form_group mb-3">
              <div class="row">
                <div class="col-md-4">
                  <%= f.label :name, 'タグ名' %>
                </div>
                <div class="col-md-8">
                  <%= f.text_field :name, placeholder: 'タグ名', class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="text-center mt-5">
              <%= f.submit "タグを作成する", class:"btn btn-salmon" %>
            </div>
           <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6 mx-auto">
      <label class="h4 pr-3 pl-3">タグ一覧</label>
      <table class="table table-secondary table-striped mt-3">
        <thead>
          <tr class="text-center">
            <th scope="col" style="width: auto">タグ名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody class="table-light">
          <% @tags.each do |tag| %>
            <tr class="text-center">
              <td><%= tag.name %></td>
              <td><%= link_to "編集する", edit_admin_tag_path(tag), class: "btn btn-success" %></td>
              <td><%= link_to "削除する", admin_tag_path(tag), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div>
        <%= paginate(@tags) %>
      </div>
    </div>

  </div>
</div>