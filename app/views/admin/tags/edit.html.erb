<p class="text-success"><%= flash[:alert] %></p>
<div class="container mx-auto">
  <div class="row mt-3">

    <div class="col-md-6 mt-4 mx-auto">
      <div class="card shadow">
        <div class="card-body">
          <p class="card-title font-weight-bold">タグ編集</p>
           <%= form_with model: @tag, url: admin_tag_path(@tag), method: :patch, local: true do |f| %>
            <div class="form_group mb-3">
              <div class="row">
                <div class="col-md-4">
                  <%= f.label :name, 'タグ名' %>
                </div>
                <div class="col-md-8">
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="text-center mt-5">
              <%= f.submit "タグを更新する", class:"btn btn-success" %>
            </div>
           <% end %>
        </div>
      </div>
    </div>
  </div>
</div>