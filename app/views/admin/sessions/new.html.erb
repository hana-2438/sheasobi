<div class="container">
  <div class="row">
    <div class="col-lg-12 login_title">
      <h4 class="mt-4">管理者ログイン</h4>
      <%= flash[:alert] %>
      <%= render "admin/shared/error_messages", resource: resource %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group row mt-4 justify-content-center align-items-center">
          <label class="col-sm-2 col-form-label">メールアドレス</label>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-controll" %>
          </div>
        </div>

        <div class="form-group row mt-4 justify-content-center align-items-center">
          <label class="col-sm-2 col-form-label">パスワード</label>
          <div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-controll" %>
          </div>
        </div>

        <div class="text-center mt-5">
          <%= f.submit "ログイン", class:"btn btn-salmon btn-lg" %>
        </div>

      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>

</div>